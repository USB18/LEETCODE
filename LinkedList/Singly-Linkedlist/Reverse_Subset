/*
Input: head = [1,2,3,4,5], left = 2, right = 4
Output: [1,4,3,2,5]
*/

class ListNode {
	ListNode next;
	int data;

	public ListNode(int data) {
		this.data = data;
		this.next = null;
	}
}

public class ReverseII {
	ListNode head;

	void insert(int data) {
		ListNode newNode = new ListNode(data);
		if (head == null) {
			head = newNode;
		} else {
			newNode.next = head;
			head = newNode;
		}
	}

	void show(ListNode head) {
		ListNode temp = head;
		while (temp != null) {
			System.out.print(temp.data + " ");
			temp = temp.next;
		}
	}

	public ListNode reverseBetween(ListNode head, int left, int right) {
		ListNode dummy = new ListNode(0);
		dummy.next = head;
		ListNode pre = dummy;
		ListNode cur = head;
		if (head == null || left == right) {
			return head;
		}

		for (int i = 0; i < left - 1; i++) {
			pre = cur;
			cur = cur.next;
		}
		
		int connect = right - left;
		ListNode nex;
		for (int i = 0; i < connect; i++) {
			nex = cur.next;
			cur.next = nex.next;
			nex.next = pre.next;
			pre.next = nex;
		}
		return dummy.next;
	}

	public static void main(String[] args) {
		ReverseII r = new ReverseII();
		r.insert(5);
		r.insert(4);
		r.insert(3);
		r.insert(2);
		r.insert(1);
		
		r.show(r.head);
		
		ListNode t = r.reverseBetween(r.head, 2, 4);
		System.out.println();
		r.show(t);
	}
}
